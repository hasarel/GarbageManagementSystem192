<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_white_background"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/custom_alert_iv_icon"
        android:layout_marginTop="20dp"
        android:src="@drawable/icons8888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/custom_alert_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:text="Payment Successfully.."
        android:textAlignment="center"
        android:textColor="@color/colorDefaultText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_alert_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Thank you for completing the online payment process,your transaction has been processed successfully.. "
        android:textAlignment="center"
        android:textColor="@color/colorDefaultText" />

    <Button
        android:id="@+id/custom_confirm_alert_btn_text"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_yellow_button"
        android:text="OK"
        android:textColor="@color/colorBlack" />

</LinearLayout>