<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.LoginActivity">


    <RelativeLayout
        android:id="@+id/login_activity_ll_base_linerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:id="@+id/activity_login_rl_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_login_iv_logo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/logo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"/>

            <RelativeLayout
                android:id="@+id/activity_login_rl_relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/activity_login_iv_logo">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_login_til_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/activity_login_et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_login_et_username"
                        android:textColor="@color/colorListNormal1Text"
                        android:inputType="text"
                        android:text="test123@gmail.com"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_rl_relativeLayout2"
                android:layout_below="@id/activity_login_rl_relativeLayout1"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_login_til_account"
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/activity_login_et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_login_et_password"
                        android:textColor="@color/colorListNormal1Text"
                        android:inputType="textPassword"
                        android:text="test123"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/activity_login_tv_forgetPassword"
                    android:layout_below="@id/activity_login_til_account"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorListNormal1Text"
                    android:text="@string/activity_login_tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/activity_login_tv_remainder"
                    android:layout_below="@id/activity_login_til_account"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/activity_login_chk_remainder"
                    android:text="@string/activity_login_tv_remainder"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorListNormal1Text"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/activity_login_chk_remainder"
                    android:layout_below="@id/activity_login_til_account"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_rl_relativeLayout3"
                android:layout_below="@id/activity_login_rl_relativeLayout2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/activity_login_btn_login"
                    android:text="@string/activity_login_btn_login"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhiteButton"
                    android:background="@drawable/rounded_corners_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="19dp"
                    android:text="@string/activity_login_tv__text"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_below="@id/activity_login_btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_login_rl_relativeLayout4"
                android:layout_below="@id/activity_login_rl_relativeLayout3"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="75dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <com.facebook.login.widget.LoginButton-->
<!--                    android:id="@+id/buttonFacebookLogin"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:layout_marginBottom="30dp" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/activity_login_rl_relativeLayout4"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_login_tv_register"
                    android:text="@string/activity_login_tv_register"
                    android:textColor="@color/colorTopOval"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>