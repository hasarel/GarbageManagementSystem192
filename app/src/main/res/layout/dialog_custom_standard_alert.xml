<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_popup_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/custom_alert_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/custom_alert_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No Internet Connection"
        android:textAlignment="center"
        android:textColor="@color/colorDefaultText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_alert_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Please turn mobile data on or connect to wifi to proceed."
        android:textAlignment="center"
        android:textColor="@color/colorDefaultText" />

    <Button
        android:id="@+id/custom_alert_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_yellow_button"
        android:text="OK"
        android:textColor="@color/colorBlack" />

</LinearLayout>